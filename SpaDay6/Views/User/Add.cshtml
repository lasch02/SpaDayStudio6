@{
}

@if (ViewBag.Password != ViewBag.verify)
{
    <h3>@ViewBag.error</h3>
}

<form method="post" action="/user">
    <label> Username: 
        <input type="text" name="Username" value="@ViewBag.Username"/>
    </label>
    <label> Email:
        <input type="email" name="Email" value="@ViewBag.Email" />
    </label>
    <label> Password:
        <input type="password" name="Password" />
    </label>
    <label>
        <input type="password" name="verify" />
    </label>
    <label>
        <input type="submit" value="Submit" />
    </label>
</form>